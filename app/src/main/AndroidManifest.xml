<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.croissant_rouge">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/croissant_rouge_progress"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/croissant_rouge_progress"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Actions.Module.ModuleActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Actions.ContactActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Actions.UrgenceActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Actions.GestesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Actions.PrincipeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".HomeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>