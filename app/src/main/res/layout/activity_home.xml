<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/colorAccent">
    <Button
        android:id="@+id/principes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="50dp"
        android:text="Nos principes"
        android:textColor="@color/colorAccent"
        android:background="@drawable/buttons"/>
    <Button
        android:id="@+id/urgence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/principes"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:text="numÃ©ros d'urgence"
        android:textColor="@color/colorAccent"
        android:background="@drawable/buttons"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/croissant_rouge_p1"/>

    <Button
        android:id="@+id/gestes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/contact"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Les gestes qui sauvent"
        android:textColor="@color/colorAccent"
        android:background="@drawable/buttons"/>
    <Button
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="20dp"
        android:text="Nous contacter"
        android:textColor="@color/colorAccent"
        android:background="@drawable/buttons"/>

</RelativeLayout>